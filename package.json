{
    "name": "aidbox-react-app",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "clean": "lerna clean",
        "bootstrap": "lerna bootstrap",
        "test": "lerna run test --concurrency=1 --stream --",
        "test:react-app": "lerna run test --scope react-app --",
        "test:node-app": "lerna run test --scope node-app --",
        "start": "lerna run --parallel start",
        "start:react-app": "lerna run start --scope react-app",
        "start:node-app": "lerna run start --scope node-app",
        "build": "lerna run --parallel build",
        "build:react-app": "lerna run build --scope react-app",
        "build:node-app": "lerna run build --scope node-app",
        "typecheck": "lerna run --parallel typecheck",
        "prepare": "husky install"
    },
    "workspaces": {
        "packages": [
            "node-app",
            "react-app",
            "shared"
        ]
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": "eslint --fix",
        "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.31.2",
        "@typescript-eslint/parser": "^4.31.2",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-unused-imports": "^1.1.4",
        "husky": "^7.0.2",
        "lerna": "^4.0.0",
        "lint-staged": "^11.1.2"
    }
}
